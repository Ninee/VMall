page {
    background-color: #F3F3F3;
}
.container {
    padding: 24rpx;
    
}

.box {
    background-color: white;
    padding-top: 48rpx;
    padding-bottom: 48rpx;
}

.box .process {
    display: flex;
    justify-content: center;
}

.box .process .status .icon {
    width: 48rpx;
}

.box .process .status .title {
    font-size: 22rpx;
    line-height: 44rpx;
    font-weight: bold;
    color: #FF628A;
}

.box .process .arrow {
    width: 48rpx;
    margin: 0 20rpx;
}

.box .info {
    color: #333333;
    font-weight: bold;
    font-size: 28rpx;
    line-height: 44rpx;
    margin-top: 36rpx;
    margin-left: 48rpx;
    margin-bottom: 24rpx;
}

.box .input-box {
    width: 608rpx;
    height: 74rpx;
    border: solid #E4E4E4 2rpx;
    margin: 12rpx auto;
}
.box .input-box .label {
    margin-left: 34rpx;
    font-size: 28rpx;
    color: #999999;
    line-height: 74rpx;
}
.box .pic-box {
    margin-left: 48rpx;
    padding: 12px 0;
}
.box .pic-box .tips {
    font-size: 24rpx;
    line-height: 44rpx;
    color: #999999;
}
.box .pic-box .upload-icon {
    width: 96rpx;
    height: 96rpx;
}

.box .submit-btn {
    width: 320rpx;
    height: 80rpx;
    color: white;
    background-color: #C90050;
    text-align: center;
    line-height: 80rpx;
    margin: 0 auto;
}