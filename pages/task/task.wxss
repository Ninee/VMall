.container {
  padding: 0;
}

.HotSwiper swiper {
  width: 100%;
  height: 304rpx;
}

.swiper-box {
  width: 702rpx;
  margin: 0 auto;
  position: relative;
  height: 304rpx;
  box-shadow: 0px 10rpx 30rpx 0px #cfc9ca;
  border-radius: 20rpx;
}

.swiper-box image {
  width: 100%;
  height: 304rpx;
  background-color: #f5f5f5;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.benefit {
  margin: 0 auto;
  width: 702rpx;
  margin-top: 16rpx;
}

.benefit image {
  width: 100%;
  
}
.match {
  width: 702rpx;
  margin: 0 auto;
}
.match .header {
  width: 190rpx;
  margin: 0 auto;
  margin-top: 50rpx;
  display: flex;
}

.match .header .header-icon {
  width: 32rpx;
  height: 32rpx;
}

.match .header .header-title {
  margin-left: 16rpx;
  color: #FF8A63;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: bold;
}
.match-card {
  padding-bottom: 24rpx;
}

.match .title {
  margin-top: 34rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}

.match .title .name {
  padding-left: 50rpx;
  color: #232323;
  font-size: 28rpx;
  line-height: 48rpx;
  font-weight: bold;
}

.match .title .time {
  padding-left: 20rpx;
  color: #666666;
  font-size: 22rpx;
}

.match .products {
  padding: 0 36rpx;
}
.match .products .line {
  margin-top: 10rpx;
  width: 100%;
  height: 2rpx;
  background-color: #EEEEEE;
}

.match .products .items-box {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.match .products .items-box .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 204rpx; 
}

.match .products .items-box .item image {
  width: 204rpx;
  height: 204rpx;
}

.match .products .items-box .item .product-name {
  margin-top: 8rpx;
  font-size: 24rpx;
  line-height: 38rpx;
}

.good-grid {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}

.good-grid .h {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
  height: 130rpx;
  font-size: 33rpx;
  color: #333;
  border: #a78845 1rpx;
}
.try {
  margin: 0 auto;
  margin-top: 16rpx;
  width: 702rpx;
  background-color: #FFF3F8;
  border-radius: 8px;
  padding: 32rpx 16rpx 10rpx 16rpx;
}
.try .header {
  width: 190rpx;
  margin: 0 auto;
  display: flex;
}

.try .header .header-icon {
  width: 32rpx;
  height: 32rpx;
}

.try .header .header-title {
  margin-left: 16rpx;
  color: #FF2D2D;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: bold;
}
.try .try-list {
  margin-top: 26rpx;
}
.sort {
  margin-top: 26rpx;
  /* position: fixed; */
  /* top: 91rpx; */
  background: #fff;
  width: 100%;
  height: 78rpx;
}

.sort-box {
  background: #fff;
  width: 100%;
  height: 78rpx;
  overflow: hidden;
  padding: 0 30rpx;
  display: flex;
}

.sort-box .item {
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  flex: 1;
  color: #333;
  font-size: 30rpx;
}

.sort-box .item .txt {
  display: block;
  width: 100%;
  height: 100%;
  color: #333;
}

.sort-box .item.active .txt {
  color: #a78845;
}

.sort-box .item.by-price {
  background: url(//yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/no-3127092a69.png) 115rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.sort-box .item.by-price.active.asc {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/up-636b92c0a5.png) 115rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.sort-box .item.by-price.active.desc {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/down-95e035f3e5.png) 115rpx center no-repeat;
  background-size: 15rpx 21rpx;
}
.scroll-list {
  background-color: #ffffff;
}